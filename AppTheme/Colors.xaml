<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="Colors.DarkShade">Black</Color>
    <Color x:Key="Colors.LightShade">Black</Color>
    <SolidColorBrush x:Key="Brushes.DarkShade" Color="{DynamicResource Colors.DarkShade}" />
    <SolidColorBrush x:Key="Brushes.LightShade" Color="{DynamicResource Colors.LightShade}" />
</ResourceDictionary>